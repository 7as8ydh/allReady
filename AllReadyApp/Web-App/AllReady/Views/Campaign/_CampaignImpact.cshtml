@model CampaignViewModel

<div class="panel campaign-impact">
    <div class="panel-heading">Campaign Goal</div>
    <div class="panel-body">
        @if (Model.CampaignImpact.ImpactType == ImpactType.Numeric)
            {
            <div class="progress">
                <div class="progress-bar" role="progressbar"
                     aria-valuenow="@Model.CampaignImpact.PercentComplete"
                     aria-valuemin="@Model.CampaignImpact.CurrentImpactLevel"
                     aria-valuemax="@Model.CampaignImpact.NumericImpactGoal" 
                     style="width: 60%;">
                    @Model.CampaignImpact.PercentComplete %
                </div>
            </div>
        }
        @Html.Raw(Model.CampaignImpact.TextualImpactGoal);
    </div>
</div>
