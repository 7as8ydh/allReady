@model AllReady.Models.Activity
@{
    ViewBag.Title = $"Tasks List for {Model.Name}";
}
<div class="row">
    <div class="cold-md-12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <h4>@Model.Description</h4>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDateTimeUtc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDateTimeUtc)
                </th>
                <th></th>
            </tr>

            @foreach (var item in (Model.Tasks.OrderBy(t => t.StartDateTimeUtc).ThenBy(t => t.Name)))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @(item.StartDateTimeUtc != null ? ((DateTime)@item.StartDateTimeUtc).ToShortDateString() : "*")
                    </td>
                    <td>
                        @(item.EndDateTimeUtc != null ? ((DateTime)@item.EndDateTimeUtc).ToShortDateString() : "*")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Task", new { id = item.Id }, new { @class = "btn" })
                        @Html.ActionLink("Delete", "Delete", "Task", new { id = item.Id }, new { @class = "btn" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <a asp-controller="Task" asp-action="Create" asp-route-activityId="@Model.Id" class="btn">Create New</a>
    </div>
</div>
