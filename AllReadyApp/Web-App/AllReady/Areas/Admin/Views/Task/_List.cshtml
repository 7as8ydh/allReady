@model AllReady.Areas.Admin.ViewModels.AdminActivityViewModel


<div class="row">
    <div class="col-md-12">
        <a asp-controller="Task" asp-action="Create" asp-route-activityId="@Model.Id" class="btn">Create Task</a>
        <a asp-controller="Activity" asp-action="Assign" asp-route-id="@Model.Id" asp-route-area="Admin" class="btn"><span class="fa fa-user"></span> Assign tasks</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Start
                </th>
                <th>
                    End
                </th>
            </tr>

            @foreach (var item in (Model.Tasks.OrderBy(t => t.StartDateTime).ThenBy(t => t.Name)))
            {
                <tr>
                    <td>
                        <a asp-controller="Task" asp-action="Details" asp-route-area="Admin" asp-route-activityId="@item.ActivityId" asp-route-id="@item.Id">@item.Name</a>
                    </td>
                    <td>
                        @(item.StartDateTime.HasValue ? item.StartDateTime.Value.UtcDateTime.ToShortDateString() : "*")
                    </td>
                    <td>
                        @(item.EndDateTime.HasValue ? item.EndDateTime.Value.UtcDateTime.ToShortDateString() : "*")
                    </td>                    
                </tr>
            }

        </table>
    </div>
</div>
