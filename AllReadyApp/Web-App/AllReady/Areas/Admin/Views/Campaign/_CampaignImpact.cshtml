@using System.Threading.Tasks
@model AllReady.Models.CampaignImpact

<div class="panel panel-success campaign-impact">
    <div class="panel-heading">@Html.Raw(Model.TextualImpactGoal) </div>
    <div class="panel-body">
        @if (Model.ImpactType == ImpactType.Numeric)
            {
            <div class="progress">
                <div class="progress-bar" role="progressbar"
                     aria-valuenow="@Model.PercentComplete"
                     aria-valuemin="@Model.CurrentImpactLevel"
                     aria-valuemax="@Model.NumericImpactGoal"
                     style="width: @Model.PercentComplete%;">
                    @if (Model.PercentComplete > 30)
                    {
                        <text>@Model.CurrentImpactLevel / @Model.NumericImpactGoal</text>
                    }
                    else
                    {
                        <text>
                            @Model.PercentComplete
                        </text>
                    }
                </div>
            </div>
        }
    </div>
</div>
