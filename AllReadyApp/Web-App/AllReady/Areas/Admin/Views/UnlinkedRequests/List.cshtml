@using AllReady.Areas.Admin.ViewModels.Request
@model AllReady.Areas.Admin.ViewModels.Request.UnlinkedRequestsViewModel

<div class="row">
    <div class="col-md-12">
        <h2>
            Unlinked Requests
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Requests.Count > 0)
            {
            <table class="table">
                <tr>
                    <th>Request Name</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Postcode</th>
                    <th>Date Added</th>
                </tr>
                @foreach (var req in Model.Requests)
                {
                    <tr>
                        <td><a asp-action="Edit" asp-controller="Request" asp-route-id="@req.Id">@req.Name</a></td>
                        <td>@req.Address</td>
                        <td>@req.City</td>
                        <td>@req.Postcode</td>
                        <td>@req.DateAdded</td>
                    </tr>
                }
            </table>
        }
        else
        {
            <br />
                <p>There are no requests to display</p>
        }
    </div>
</div>