@model AllReady.Areas.Admin.ViewModels.CampaignActivitiesViewModel

@{  ViewBag.Title = "Activities for " + Model.CampaignName; }

<div class="row">
    <div class="cold-md-12">
        <h2>@ViewBag.Title</h2>
    </div>
</div>
<div class="row">
    <div class="cold-md-12">
        <table class="table">
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Start
                </th>
                <th>
                    End
                </th>
                <th></th>
            </tr>
            @foreach (var item in Model.Activities) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @item.StartDateTimeUtc.ToShortDateString()
                    </td>
                    <td>
                        @item.EndDateTimeUtc.ToShortDateString()
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Activity", new { id = item.Id }, new { @class = "btn" })
                        @Html.ActionLink("Details", "Details", "Activity", new { id = item.Id }, new { @class = "btn" }) 
                        @Html.ActionLink("Delete", "Delete", "Activity", new { id = item.Id }, new { @class = "btn" })
                        @Html.ActionLink("Assign Volunteers", "Assign", new { id = item.Id }, new { @class = "btn" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <a asp-controller="Activity" asp-action="Create"
              class="btn">Create New</a>
    </div>
</div>

